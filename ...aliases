# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias countryroads='cd ~'
alias reload='/bin/bash'

# Get Stitches
alias snitch='git blame'

# Software Binaries
alias intpy='arch -x86_64 /usr/local/bin/python3.9'
alias intpip='arch -x86_64 /usr/local/bin/pip3.9'

alias vpy="~/.python_venvs/${PWD##*/}/bin/python3"
alias vpip="~/.python_venvs/${PWD##*/}/bin/pip3"

alias brew='/opt/homebrew/bin/brew'
alias brow='arch -x86_64 /usr/local/bin/brew'
#alias func='arch -x86_64 /usr/local/bin/func'

# Always enable colored `grep` output
alias grep='grep --color=auto '

# Pipe my public key to my clipboard.
alias pubkey="cat ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Pipe my private key to my clipboard.
alias privkey="cat ~/.ssh/id_rsa | pbcopy | echo '=> Private key copied to pasteboard.'"

# Paths
eval "$(/opt/homebrew/bin/brew shellenv)"

# the fuck
eval $(thefuck --alias)
